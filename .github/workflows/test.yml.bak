name: test

on:
  push:
    branches: [master]
  pull_request:
    branches: [master]

env:
  CARGO_TERM_COLOR: always

jobs:
  test:
    runs-on: ubuntu-latest

    timeout-minutes: 3

    steps:
      - uses: actions/checkout@v2
      - name: Run tests
        run: |
          cargo version
          make test
