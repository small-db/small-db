{
    // The environment variables for:
    //  - test (the "Run Test" button just above the test function)
    //  - debug (the "Debug" button just above the test function)
    "rust-analyzer.runnables.extraEnv": {
        "RUST_LOG": "debug",

        // Fix the error from vscode: "Path to shell executable "cargo" does not exist."
        // 
        // TODO: remove this setting after the issue is fixed.
        "PATH": "/home/xiaochen/.cargo/bin",
    },
    // Enabled features for cargo. This setting affects:
    //  - vscode semantic checking
    //  - test (the "Run Test" button just above the test function)
    //  - debug (the "Debug" button just above the test function)
    "rust-analyzer.cargo.features": [
        "tree_latch",
        "aries_steal",
        "aries_force",
        "read_committed",
        "benchmark",
        "debug",
    ],
}